<?xml version="1.0"?>
<robot name="simple_worm">

    <!-- Head -->
    <link name="head">
        <visual>
            <geometry>
                <box size="0.2 0.2 0.2"/>
            </geometry>
            <material name="head_color">
                <color rgba="0.8 0.2 0.2 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.2 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.0067" ixy="0.0" ixz="0.0" 
                     iyy="0.0067" iyz="0.0" 
                     izz="0.0067"/>
        </inertial>
    </link>

    <!-- Segment 1 -->
    <link name="segment1">
        <visual>
            <geometry>
                <box size="0.18 0.18 0.18"/>
            </geometry>
            <material name="seg1_color">
                <color rgba="0.2 0.8 0.2 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.18 0.18 0.18"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.8"/>
            <inertia ixx="0.0043" ixy="0.0" ixz="0.0" 
                     iyy="0.0043" iyz="0.0" 
                     izz="0.0043"/>
        </inertial>
    </link>

    <!-- Segment 2 -->
    <link name="segment2">
        <visual>
            <geometry>
                <box size="0.16 0.16 0.16"/>
            </geometry>
            <material name="seg2_color">
                <color rgba="0.2 0.2 0.8 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.16 0.16 0.16"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="0.0026" ixy="0.0" ixz="0.0" 
                     iyy="0.0026" iyz="0.0" 
                     izz="0.0026"/>
        </inertial>
    </link>

    <!-- Tail -->
    <link name="tail">
        <visual>
            <geometry>
                <box size="0.14 0.14 0.14"/>
            </geometry>
            <material name="tail_color">
                <color rgba="0.8 0.8 0.2 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.14 0.14 0.14"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.4"/>
            <inertia ixx="0.0013" ixy="0.0" ixz="0.0" 
                     iyy="0.0013" iyz="0.0" 
                     izz="0.0013"/>
        </inertial>
    </link>

    <!-- Very flexible joints -->
    <joint name="joint1" type="revolute">
        <parent link="head"/>
        <child link="segment1"/>
        <origin xyz="0.0 0.0 -0.35" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.0" upper="3.0" effort="10.0" velocity="10.0"/>
        <dynamics damping="0.001" friction="0.001"/>
    </joint>

    <joint name="joint2" type="revolute">
        <parent link="segment1"/>
        <child link="segment2"/>
        <origin xyz="0.0 0.0 -0.35" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-3.0" upper="3.0" effort="10.0" velocity="10.0"/>
        <dynamics damping="0.001" friction="0.001"/>
    </joint>

    <joint name="joint3" type="revolute">
        <parent link="segment2"/>
        <child link="tail"/>
        <origin xyz="0.0 0.0 -0.35" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.0" upper="3.0" effort="10.0" velocity="10.0"/>
        <dynamics damping="0.001" friction="0.001"/>
    </joint>

</robot>
